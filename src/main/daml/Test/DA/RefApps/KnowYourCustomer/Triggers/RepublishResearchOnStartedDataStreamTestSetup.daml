module Test.DA.RefApps.KnowYourCustomer.Triggers.RepublishResearchOnStartedDataStreamTestSetup where

import DA.RefApps.KnowYourCustomer.DataStream
import DA.RefApps.KnowYourCustomer.Utils
import DA.RefApps.KnowYourCustomer.Types
import Test.DA.RefApps.KnowYourCustomer.RolesTest
import Test.DA.RefApps.KnowYourCustomer.Triggers.MergeTest
import Test.DA.RefApps.KnowYourCustomer.Triggers.PublishResearchOnEmptyDataStreamTestSetup

import Daml.Script

setup : Script ()
setup = do
  let
    analyst = getScriptParty "KYC_Analyst"
    reviewer = getScriptParty "KYC_Reviewer"
  stream <- setupToMergeRawPublicationsOnEmptyDataStream

  let newObservation =
        Observation with
          label = reference
          time = appStartTime
          value = Research with -- any observation value just to start the EmptyDataStream
            reviewedBy = reviewer
            verifiedByQA = True
            researchData

  submit analyst $ exerciseCmd stream StartDataStream with newObservation

  pure ()
  where
    reference = ObservationReference with
      customerName = "ACME"
      includeCIP = True
      includeCDD = False
      includeScreening = True

    researchData = ResearchData with
      researchCip = Data $ createCIPData 1
      researchCdd = NotAvailable
      researchScreening = Data $ createScreeningData 1
